<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sizebook.ViewDetails">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name_field_viewdetail"
            android:textSize="24sp"
            android:lineSpacingExtra="8sp"
            android:elevation="@dimen/activity_vertical_margin"
            android:paddingBottom="10dp"
            android:text="Name" />

        <TextView
            android:text="Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/date_field_viewdetail"
            android:textSize="24sp"
            android:lineSpacingExtra="8sp"
            android:elevation="@dimen/activity_vertical_margin"
            android:paddingBottom="10dp" />

        <TextView
            android:text="Neck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/neck_field_viewdetail"
            android:textSize="24sp"
            android:lineSpacingExtra="8sp"
            android:elevation="@dimen/activity_vertical_margin"
            android:paddingBottom="10dp" />

        <TextView
            android:text="Bust"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bust_field_viewdetail"
            android:textSize="24sp"
            android:lineSpacingExtra="8sp"
            android:elevation="@dimen/activity_vertical_margin"
            android:paddingBottom="10dp" />

        <TextView
            android:text="Chest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chest_field_viewdetail"
            android:textSize="24sp"
            android:lineSpacingExtra="8sp"
            android:elevation="@dimen/activity_vertical_margin"
            android:paddingBottom="10dp" />

        <TextView
            android:text="Waist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/waist_field_viewdetail"
            android:textSize="24sp"
            android:lineSpacingExtra="8sp"
            android:elevation="@dimen/activity_vertical_margin"
            android:paddingBottom="10dp" />

        <TextView
            android:text="Hip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hip_field_viewdetail"
            android:textSize="24sp"
            android:lineSpacingExtra="8sp"
            android:elevation="@dimen/activity_vertical_margin"
            android:paddingBottom="10dp" />

        <TextView
            android:text="Inseam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/inseam_field_viewdetail"
            android:textSize="24sp"
            android:lineSpacingExtra="8sp"
            android:elevation="@dimen/activity_vertical_margin"
            android:paddingBottom="10dp" />

        <TextView
        android:text="Comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/comment_field_viewdetail"
        android:textSize="24sp"
        android:lineSpacingExtra="8sp"
            android:elevation="@dimen/activity_vertical_margin"
            android:paddingBottom="10dp"
            android:layout_weight="1.22" />

        <Button
            android:text="Edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_button_viewdetail" />

        <Button
            android:text="Delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/delete_button_viewdetail" />

    </LinearLayout>
</RelativeLayout>
